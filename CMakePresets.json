{
  "version": 6,
  "configurePresets": [
    {
      "name": "windows-vcpkg",
      "displayName": "Windows (vcpkg, Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-vcpkg",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    }
    ,
    {
      "name": "windows-vcpkg-static",
      "displayName": "Windows (vcpkg static, Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-vcpkg-static",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static"
      }
    }
    ,
    {
      "name": "windows-vcpkg-msvc",
      "displayName": "Windows (vcpkg, MSVC)",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/windows-vcpkg-msvc",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    }
    ,
    {
      "name": "windows-vcpkg-static-msvc",
      "displayName": "Windows (vcpkg static, MSVC)",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/windows-vcpkg-static-msvc",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-vcpkg",
      "configurePreset": "windows-vcpkg"
    }
    ,
    {
      "name": "windows-vcpkg-static",
      "configurePreset": "windows-vcpkg-static"
    }
    ,
    {
      "name": "windows-vcpkg-msvc",
      "configurePreset": "windows-vcpkg-msvc",
      "configuration": "Debug"
    }
    ,
    {
      "name": "windows-vcpkg-static-msvc",
      "configurePreset": "windows-vcpkg-static-msvc",
      "configuration": "Debug"
    }
  ]
}
