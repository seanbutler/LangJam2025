{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure (vcpkg static)",
      "type": "shell",
      "command": "cmake",
      "args": ["--preset", "windows-vcpkg-static-msvc"],
      "group": "build"
    },
    {
      "label": "Build (vcpkg static)",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "--preset", "windows-vcpkg-static-msvc"],
      "group": "build",
      "dependsOn": "Configure (vcpkg static)"
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "${workspaceFolder}/build/windows-vcpkg-static-msvc/Debug/LangJamSDL.exe",
      "dependsOn": "Build (vcpkg static)"
    }
  ]
}
